<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <LinearLayout
        android:id="@+id/mBotton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/mLine_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/mImg_home"
                android:layout_height="30dp"
                android:src="@mipmap/shangpin1"
                android:layout_width="30dp" />
            <TextView
                android:id="@+id/mTv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品列表"
                android:textColor="#f00"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mLine_fabu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/mImg_fabu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/fabu" />
            <TextView
                android:id="@+id/mTv_fabu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mLine_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/mImg_mine"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/gerenzhongxin" />
            <TextView
                android:id="@+id/mTv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mFrag_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </LinearLayout>
</RelativeLayout>

